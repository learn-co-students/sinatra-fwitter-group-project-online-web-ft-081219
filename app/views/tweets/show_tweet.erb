<%# if logged_in? %>
    <h1>Tweet</h1>
    <p>
      <%=@tweet.content%>
    </p>
    <br>
    <a href="/tweets/<%=@tweet.id%>/edit">Edit Tweet</a>
    <br>
    <%# if current_user.id = @tweet.userd_id %>
      <form action="/tweets/<%=@tweet.id%>/delete" method="POST">
            <input id="hidden" type="hidden" name="_method" value="delete">
            <input type="submit" value="Delete Tweet">
      </form>
    <br>
    <%#end%>

      <a href="/tweets">All tweets</a>
      <br>
      <a href="/users/<%=current_user.slug%>"> My tweets </a>
      <br>
      <a href="/logout">Log out</a>
      <br>
<%# else %>
      <h1> You Must Be Logged in to See Tweets </h1>
<%# end %>